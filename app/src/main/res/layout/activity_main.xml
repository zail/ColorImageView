<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itelios.com.coloredimageview.MainActivity">

    <itelios.com.colorimageview.ColoredImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_picto_menu" />

    <itelios.com.colorimageview.ColoredImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_picto_menu"
        app:imageColor="@color/colorAccent" />

    <itelios.com.colorimageview.ColoredImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_picto_menu"
        app:imageColor="@color/colorPrimary" />

    <itelios.com.colorimageview.ColoredImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_picto_menu"
        app:imageColor="#000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_picto_menu"
        android:tint="@color/colorPrimary" />

</LinearLayout>
